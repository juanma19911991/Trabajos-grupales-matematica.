def decimal_a_binario(numero):
    return bin(numero)[2:]

def binario_a_decimal(bin_str):
    try:
        return int(bin_str, 2)
    except ValueError:
        return None

def menu():
    print("ğŸ”¢ Conversor Decimal â†” Binario")
    print("1. Decimal a Binario")
    print("2. Binario a Decimal")
    print("3. Salir")

def main():
    while True:
        menu()
        opcion = input("Seleccione una opciÃ³n (1-3): ")

        if opcion == "1":
            try:
                num = int(input("Ingrese un nÃºmero decimal: "))
                binario = decimal_a_binario(num)
                print(f"âœ… Binario: {binario}\n")
            except ValueError:
                print("âŒ Error: ingrese un nÃºmero entero.\n")

        elif opcion == "2":
            bin_str = input("Ingrese un nÃºmero binario (solo 0 y 1): ")
            decimal = binario_a_decimal(bin_str)
            if decimal is not None:
                print(f"âœ… Decimal: {decimal}\n")
            else:
                print("âŒ Error: valor no vÃ¡lido como nÃºmero binario.\n")

        elif opcion == "3":
            print("ğŸ‘‹ Hasta luego.")
            break
        else:
            print("âŒ OpciÃ³n no vÃ¡lida. Intente de nuevo.\n")

if __name__ == "__main__":
    main()
